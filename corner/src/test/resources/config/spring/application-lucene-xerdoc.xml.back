<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <bean id="xerdocDictionaryFactory" class="corner.orm.lucene.xerdoc.xdmf.lucene.DictionaryFactory">
    	<property name="dictionariesLocation">
    		<value>classpath:/corner/orm/lucene/xerdoc/dictionary</value>
    	</property>
    </bean>
	<bean id="xerdocIndexAnalyzer" class="corner.orm.lucene.xerdoc.xdmf.lucene.SegmentGBKAnalyzer">
		<property name="dictionaryFactory">
			<ref local="xerdocDictionaryFactory"/>
		</property>
	</bean>
	
	
	
</beans>