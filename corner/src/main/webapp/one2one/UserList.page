<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE page-specification PUBLIC "-//Apache Software Foundation//Tapestry Specification 4.0//EN" "http://jakarta.apache.org/tapestry/dtd/Tapestry_4_0.dtd">
<page-specification class="corner.sandbox.page.UserRelativeListPage">
<property initial-value="new corner.sandbox.model.User()" name="entity" />
<property initial-value="new corner.sandbox.model.User()" name="queryEntity" persist="client" />

<component id="UserQueryForm" type="Form">
    <binding name="listener" value="listener:doQueryEntityAction"/>
</component>

<component id="userNameField" type="TextField">
	<binding name="value" value="ognl:queryEntity.userName" />
</component>

<component id="userPassField" type="TextField">
    <binding name="hidden" value="ognl:true" />
	<binding name="value" value="ognl:queryEntity.userPass" />
</component>

<component id="userContentField" type="TextField">
	<binding name="value" value="ognl:queryEntity.userContent" />
</component>

<component id="UserField" type="Hidden">
	<binding name="value" value="ognl:queryEntity" />
</component>
</page-specification>