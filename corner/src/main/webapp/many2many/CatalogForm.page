<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE page-specification PUBLIC "-//Apache Software Foundation//Tapestry Specification 4.0//EN" "http://jakarta.apache.org/tapestry/dtd/Tapestry_4_0.dtd">
<page-specification class="corner.sandbox.page.CatalogFormPage">
	<property initial-value="new corner.sandbox.model.Catalog()" name="entity" />
    <property name="userEntity"/>
	<bean name="delegate" class="corner.orm.tapestry.ShowMessageValidationDelegate" />
	<component id="catalogFormField" type="Form">
		<binding name="delegate" value="ognl:beans.delegate" />
        <binding name="ClientValidationEnable" value="ognl:true" />
       	<binding name="listener" value="listener:doSaveEntityAction"/>
        <binding name="success" value="listener:doSaveEntityAction" />
        <binding name="cancel" value="listener:doCancelEntityAction" />
    </component>

    <component id="userField" type="Hidden">
		<binding name="value" value="ognl:user" />
    </component>

    <component id="catalogField" type="Hidden">
    	<binding name="value" value="entity" />
    </component>

    <component id="catalogNameField" type="TextField">
		<binding name="value" value="ognl:entity.catalogName" />
    </component>

    <component id="catalogStyleField" type="TextField">
		<binding name="value" value="ognl:entity.catalogStyle" />
    </component>
</page-specification>