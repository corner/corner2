<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE page-specification PUBLIC "-//Apache Software Foundation//Tapestry Specification 4.0//EN" "http://jakarta.apache.org/tapestry/dtd/Tapestry_4_0.dtd">
<page-specification class="corner.sandbox.page.BlogFormPage">
    <property initial-value="new corner.sandbox.model.Blog()" name="entity"/>
    <bean name="delegate" class="corner.orm.tapestry.ShowMessageValidationDelegate"/>
    <component type="Form" id="BlogForm">

	  <binding name="delegate" value="ognl:beans.delegate"/>
      <binding name="clientValidationEnabled" value="ognl:true"/>
	  <binding name="listener" value="listener:doSaveEntityAction"/>
	  <binding name="success" value="listener:doSaveEntityAction"/>
	  <binding name="cancel" value="listener:doCancelEntityAction"/>
	</component>



    <component id="BlogField" type="Hidden">
    	<binding name="value" value="entity"/>
    </component>

    <component id="UserField" type="Hidden">
		<binding name="value" value="user" />
    </component>

    <component id="blogTitleField" type="TextField">
    	<binding name="displayName" value="message:blogTitle"/>
        <binding name="translator" value="translator:string"/>
        <binding name="validators" value="validators:required,maxLength=5"/>
        <binding name="value" value="ognl:entity.blogTitle"/>
    </component>
    <component id="blogContentField" type="TextField">
        <binding name="displayName" value="message:blogContent"/>
        <binding name="translator" value="translator:string"/>
        <binding name="validators" value="validators:required,maxLength=5"/>
    	<binding name="value" value="entity.blogContent"/>
    </component>
</page-specification>