<ivyconf>
<conf defaultResolver="maxinfo" checkUpToDate="true"/>
  <include url="${ivy.default.conf.dir}/ivyconf-local.xml"/>
  <resolvers>
	  <filesystem name="shared">
  			<ivy pattern="${ivy.repo.shared}/[organisation]/[module]/ivys/ivy-[revision].xml"/>
  			<artifact pattern="${ivy.repo.shared}/[organisation]/[module]/[type]s/[artifact]-[revision].[type]"/>
      </filesystem>
      <url name="maxinfo-ivy">
          <artifact pattern="http://dev.bjmaxinfo.com/ivy/[organisation]/[module]/[type]s/[artifact]-[revision].[type]" />
      </url>

      <chain name="maxinfo">
		<resolver ref="local"/>
		<resolver ref="maxinfo-ivy"/>
      </chain>
  </resolvers>
</ivyconf>