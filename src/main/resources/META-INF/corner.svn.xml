<module id="corner.svn" version="1.0.0" package="corner.orm.tapestry.service.svn">  
  <!-- 提供一个tapestry的服务 -->
  <contribution configuration-id="tapestry.services.ApplicationServices">
		<service name="svn" object="service:SvnKitService"/>
  </contribution>
  	<contribution configuration-id="hivemind.FactoryDefaults">
	   <default symbol="corner.svn.url" value="http://dev.bjmaxinfo.com/svn/svn-test/"/>
	   <default symbol="corner.svn.username" value="xf"/>
	   <default symbol="corner.svn.password" value="123456"/>
	</contribution>
	<service-point id="SvnKitService"
		interface="org.apache.tapestry.engine.IEngineService">
		<invoke-factory>
			<construct class="SvnKitService">
				<set property="svnurl" value="${corner.svn.url}"/>
				<set property="username" value="${corner.svn.username}"/>
				<set property="password"	value="${corner.svn.password}"/>
				<set-object property="linkFactory" value="infrastructure:linkFactory"/>
				<set-object property="dataSqueezer" value="service:tapestry.data.DataSqueezer"/>
			</construct>
		</invoke-factory>
	</service-point>
<!-- contribution -->
</module>