		</dependency>
	</dependencies>
	<distributionManagement>
		<repository>
            <id>maxinfo</id>
            <url>scp://dev.bjmaxinfo.com/opt/mvn</url>
        </repository>
		<site>
			<id>maxinfo</id>
			<url>scp://dev.bjmaxinfo.com/opt/sites/corner-sandbox</url>
			<name>jcai</name>
		</site>
	</distributionManagement>
</project>